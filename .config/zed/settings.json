{
  "icon_theme": "Zed (Default)",
  "telemetry": {
    "metrics": false,
    "diagnostics": false,
  },
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "theme": {
    "mode": "dark",
    "light": "Ayu Light",
    "dark": "Ayu Dark",
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false,
    },
  },
  "terminal": {
    "font_size": 12,
  },
  "session": {
    // undocumented?
    // https://github.com/zed-industries/zed/pull/13546
    "restore_unsaved_buffers": true,
  },
  "languages": {
    "YAML": {
      "formatter": "language_server",
      "format_on_save": "off",
    },
    "TypeScript": {
      "format_on_save": "off",
      "prettier": {
        "semi": "false",
      },
    },
  },
}
